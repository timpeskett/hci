<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="filesAnchorPane" fx:id="filesAnchor" prefHeight="400.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="wizard.controller.FilesController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="900.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Files">
               <font>
                  <Font size="40.0" />
               </font>
            </Text>
            <HBox alignment="CENTER_LEFT" prefHeight="35.0" prefWidth="606.0" spacing="20.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Input file(s)         ">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Text>
                  <TextField fx:id="inputFilesTextArea" prefHeight="25.0" prefWidth="392.0" />
                  <Button fx:id="inputFilesBrowse" mnemonicParsing="false" onAction="#inputFilesBrowsePressed" text="Browse...">
                     <font>
                        <Font size="16.0" />
                     </font></Button>
               </children>
               <padding>
                  <Insets left="150.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="35.0" prefWidth="606.0" spacing="20.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Output directory">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Text>
                  <TextField fx:id="outputDirectoryTextArea" prefHeight="25.0" prefWidth="394.0" />
                  <Button fx:id="outputDirectoryBrowse" mnemonicParsing="false" onAction="#outputDirectoryBrowse" text="Browse...">
                     <font>
                        <Font size="16.0" />
                     </font></Button>
               </children>
               <padding>
                  <Insets left="150.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" prefHeight="35.0" prefWidth="606.0" spacing="20.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Output file name">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Text>
                  <TextField fx:id="outputFileNameTextArea" prefHeight="25.0" prefWidth="199.0" text="new_file" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
               <children>
                  <Button fx:id="backBtn" mnemonicParsing="false" onAction="#backBtnPressed" prefHeight="72.0" prefWidth="176.0" text="Back">
                     <font>
                        <Font size="30.0" />
                     </font>
                  </Button>
                  <Button fx:id="nextBtn" mnemonicParsing="false" onAction="#nextBtnPressed" prefHeight="72.0" prefWidth="176.0" text="Next">
                     <font>
                        <Font size="30.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
         <opaqueInsets>
            <Insets top="20.0" />
         </opaqueInsets>
      </VBox>
   </children>
</AnchorPane>
